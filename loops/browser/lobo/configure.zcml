<!-- $Id$ -->

<configure
   xmlns:zope="http://namespaces.zope.org/zope"
   xmlns="http://namespaces.zope.org/browser"
   i18n_domain="loops">

  <!-- Views for the Lobo skin / grid-based layout -->

  <zope:adapter
        name="lobo_layout"
        for="loops.interfaces.IConcept
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.Layout"
        permission="zope.View" />

  <zope:adapter
        name="lobo_g3"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.Grid3"
        permission="zope.View" />

  <zope:adapter
        name="lobo_lt"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.ListThumbs"
        permission="zope.View" />

  <zope:adapter
        name="lobo_l1"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.List1"
        permission="zope.View" />

  <zope:adapter
        name="lobo_l3"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.List3"
        permission="zope.View" />

  <zope:adapter
        name="lobo_l2"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.List2"
        permission="zope.View" />

  <zope:adapter
        name="lobo_ht"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.HeaderThumbs"
        permission="zope.View" />

  <zope:adapter
        name="lobo_h0"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.Header0"
        permission="zope.View" />

  <zope:adapter
        name="lobo_h1"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.Header1"
        permission="zope.View" />

  <zope:adapter
        name="lobo_h2"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.Header2"
        permission="zope.View" />

  <zope:adapter
        name="lobo_h3"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.Header3"
        permission="zope.View" />

  <zope:adapter
        name="lobo_cell"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.ConceptView"
        permission="zope.View" />

  <!-- parts for displaying resources -->

  <zope:adapter
        name="lobo_ig3"
        for="loops.interfaces.IConceptSchema
             loops.browser.skin.Lobo"
        provides="zope.interface.Interface"
        factory="loops.browser.lobo.standard.ImageGrid3"
        permission="zope.View" />

</configure>
